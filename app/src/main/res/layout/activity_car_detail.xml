<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/btn_book_now"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Header -->
            <ImageButton
                android:id="@+id/btn_back_detail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_circle_white_border"
                android:src="@drawable/ic_chevron_left"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Details"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btn_back_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_back_detail" />

            <ImageButton
                android:id="@+id/btn_more_detail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_circle_white_border"
                android:src="@drawable/ic_more_horizontal"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_back_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_back_detail"
                app:tint="@color/black" />

            <!-- Car Hero Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_car_hero"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_back_detail">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5">

                    <ImageButton
                        android:id="@+id/btn_fav_detail"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_circle"
                        android:src="@drawable/ic_heart_line"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/hint_gray" />

                    <ImageView
                        android:id="@+id/iv_car_detail"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/car_tesla_model_s"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/bg_circle" android:backgroundTint="@color/dark_gray" android:layout_marginHorizontal="4dp" />
                        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/bg_circle" android:backgroundTint="#DDDDDD" android:layout_marginHorizontal="4dp" />
                        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/bg_circle" android:backgroundTint="#DDDDDD" android:layout_marginHorizontal="4dp" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Car Basic Info -->
            <TextView
                android:id="@+id/tv_car_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="Tesla Model S"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_car_hero" />

            <TextView
                android:id="@+id/tv_rating_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="5.0 ⭐"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_car_name_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_car_name_detail" />

            <TextView
                android:id="@+id/tv_reviews_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(100+Reviews)"
                android:textColor="@color/hint_gray"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_rating_detail"
                app:layout_constraintTop_toBottomOf="@+id/tv_rating_detail" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:text="A car with high specs that are rented at an affordable price."
                android:textColor="@color/hint_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_car_name_detail"
                app:layout_constraintTop_toBottomOf="@+id/tv_car_name_detail" />

            <View
                android:id="@+id/desc_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:background="@color/border_gray"
                app:layout_constraintTop_toBottomOf="@+id/tv_description" />

            <!-- Owner Info -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/desc_divider">

                <ImageView
                    android:id="@+id/iv_owner_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_profile_pic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Hela Quintin"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_owner_avatar"
                    app:layout_constraintStart_toEndOf="@+id/iv_owner_avatar"
                    app:layout_constraintTop_toTopOf="@+id/iv_owner_avatar" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/checkbox_on_background"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_owner_name"
                    app:layout_constraintStart_toEndOf="@+id/tv_owner_name"
                    app:layout_constraintTop_toTopOf="@+id/tv_owner_name"
                    app:tint="#3B82F6" />

                <ImageButton
                    android:id="@+id/btn_message_owner"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle_white_border"
                    android:src="@drawable/ic_chat_line"
                    android:padding="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/hint_gray" />

                <ImageButton
                    android:id="@+id/btn_call_owner"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_circle_white_border"
                    android:src="@drawable/ic_phone_line"
                    android:padding="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_message_owner"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/hint_gray" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Car Features -->
            <TextView
                android:id="@+id/tv_features_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:text="Car features"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_owner" />

            <GridLayout
                android:id="@+id/gl_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:columnCount="3"
                app:layout_constraintTop_toBottomOf="@+id/tv_features_title">

                <!-- Feature 1: Capacity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_feature_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_seat_line"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Capacity"
                        android:textColor="@color/hint_gray"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 Seats"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Feature 2: Engine -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/bg_feature_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_power_line"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Engine Out"
                        android:textColor="@color/hint_gray"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="670 HP"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Feature 3: Max Speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_feature_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_speed_line"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Max Speed"
                        android:textColor="@color/hint_gray"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250km/h"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Feature 4: Autopilot -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_feature_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_steering_line"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Advance"
                        android:textColor="@color/hint_gray"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autopilot"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Feature 5: Charge -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/bg_feature_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_battery_line"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Single Charge"
                        android:textColor="@color/hint_gray"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="405 Miles"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Feature 6: Auto Parking -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_feature_card"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_parking_line"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Advance"
                        android:textColor="@color/hint_gray"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto Parking"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                </LinearLayout>

            </GridLayout>

            <!-- Reviews Section -->
            <RelativeLayout
                android:id="@+id/rl_reviews_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/gl_features">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review (125)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="See All"
                    android:textColor="@color/hint_gray"
                    android:textSize="14sp" />
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/hsv_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp"
                android:clipToPadding="false"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@+id/rl_reviews_header">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Review 1 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_review_card"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_rev_avatar1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user_profile_pic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_rev_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Mr. Jack"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/iv_rev_avatar1"
                            app:layout_constraintTop_toTopOf="@+id/iv_rev_avatar1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0 ⭐"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="The rental car was clean, reliable, and the service was quick and efficient."
                            android:textColor="@color/hint_gray"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@+id/iv_rev_avatar1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Review 2 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_review_card"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_rev_avatar2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user_profile_pic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_rev_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Robert"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/iv_rev_avatar2"
                            app:layout_constraintTop_toTopOf="@+id/iv_rev_avatar2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8 ⭐"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Great experience! The car was in excellent condition and the host was very polite."
                            android:textColor="@color/hint_gray"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@+id/iv_rev_avatar2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Sticky Footer Button -->
    <Button
        android:id="@+id/btn_book_now"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_book_button"
        android:text="Book Now"
        android:drawableEnd="@drawable/ic_arrow_right_white"
        android:drawablePadding="8dp"
        android:paddingHorizontal="24dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
