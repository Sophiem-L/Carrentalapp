<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Header -->
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_qent_logo_main"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_logo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Qent"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
                app:layout_constraintStart_toEndOf="@+id/iv_logo"
                app:layout_constraintTop_toTopOf="@+id/iv_logo" />

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user_profile_pic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/fl_notif"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_card"
                app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
                app:layout_constraintEnd_toStartOf="@+id/iv_profile"
                app:layout_constraintTop_toTopOf="@+id/iv_profile">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bell_line"
                    app:tint="@color/black" />
                
                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_button_dark"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </FrameLayout>

            <!-- Search Bar -->
            <EditText
                android:id="@+id/et_home_search"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_card"
                android:drawableStart="@drawable/ic_search_line"
                android:drawablePadding="12dp"
                android:hint="Search your dream car....."
                android:paddingHorizontal="16dp"
                android:textColor="@color/secondary_gray"
                android:textColorHint="@color/secondary_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_filter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

            <ImageButton
                android:id="@+id/btn_filter"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:src="@drawable/ic_filter_line"
                app:layout_constraintBottom_toBottomOf="@+id/et_home_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_home_search"
                app:tint="@color/black" />

            <!-- Brands Area -->
            <TextView
                android:id="@+id/tv_brands_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Brands"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_home_search" />

            <LinearLayout
                android:id="@+id/ll_brands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_brands_title">

                <!-- Brand 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_button_dark"
                        android:padding="16dp"
                        android:src="@drawable/logo_tesla" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tesla"
                        android:textSize="12sp"
                        android:textColor="@color/secondary_gray" />
                </LinearLayout>

                <!-- Brand 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_card"
                        android:padding="16dp"
                        android:src="@drawable/logo_lamborgini" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Lamborghini"
                        android:textSize="12sp"
                        android:textColor="@color/secondary_gray" />
                </LinearLayout>

                <!-- Brand 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_card"
                        android:padding="16dp"
                        android:src="@drawable/logo_bmw" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="BMW"
                        android:textSize="12sp"
                        android:textColor="@color/secondary_gray" />
                </LinearLayout>

                <!-- Brand 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_card"
                        android:padding="16dp"
                        android:src="@drawable/logo_ferrari" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Ferrari"
                        android:textSize="12sp"
                        android:textColor="@color/secondary_gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Best Cars Section -->
            <TextView
                android:id="@+id/tv_best_cars_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Best Cars"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_brands" />

            <TextView
                android:id="@+id/tv_view_all_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="@color/secondary_gray"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_best_cars_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Available"
                android:textColor="@color/secondary_gray"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_best_cars_title" />

            <!-- Car Cards Grid Placeholder -->
            <LinearLayout
                android:id="@+id/ll_car_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_available">

                <!-- Car 1 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iv_fav1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_favorite"
                        android:padding="6dp"
                        android:src="@drawable/ic_heart_line"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/secondary_gray" />

                    <ImageView
                        android:id="@+id/iv_car1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_car_gray"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/car_ferrari_ff"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_fav1" />

                    <TextView
                        android:id="@+id/tv_car_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ferrari-FF"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_car1" />

                    <TextView
                        android:id="@+id/tv_rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0 â­"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_car_name1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_car_name1" />

                    <TextView
                        android:id="@+id/tv_loc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Washington DC"
                        android:textColor="@color/secondary_gray"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_car_name1" />

                    <TextView
                        android:id="@+id/tv_seats1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="4 Seats"
                        android:textColor="@color/secondary_gray"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_loc1" />

                    <TextView
                        android:id="@+id/tv_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="$200/Day"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_seats1" />

                    <Button
                        android:id="@+id/btn_book1"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_button_dark"
                        android:paddingHorizontal="8dp"
                        android:text="Book now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:backgroundTint="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_price1" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Car 2 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/iv_fav2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_favorite"
                        android:padding="4dp"
                        android:src="@android:drawable/btn_star"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/secondary_gray" />

                    <ImageView
                        android:id="@+id/iv_car2"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_car_gray"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/car_tesla_model_s"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_fav2" />

                    <TextView
                        android:id="@+id/tv_car_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tesla Model S"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_car2" />

                    <TextView
                        android:id="@+id/tv_rating2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0 â­"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_car_name2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_car_name2" />

                    <TextView
                        android:id="@+id/tv_loc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Chicago, USA"
                        android:textColor="@color/secondary_gray"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_car_name2" />

                    <TextView
                        android:id="@+id/tv_seats2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="5 Seats"
                        android:textColor="@color/secondary_gray"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_loc2" />

                    <TextView
                        android:id="@+id/tv_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="$100/Day"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_seats2" />

                    <Button
                        android:id="@+id/btn_book2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_button_dark"
                        android:paddingHorizontal="8dp"
                        android:text="Book now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:backgroundTint="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_price2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- Nearby Section -->
            <TextView
                android:id="@+id/tv_nearby_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nearby"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_car_grid" />

            <TextView
                android:id="@+id/tv_view_all_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="@color/secondary_gray"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_nearby_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iv_nearby_banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_nearby_banner"
                app:layout_constraintTop_toBottomOf="@+id/tv_nearby_title" />

            <!-- Spacer for Bottom Nav -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_nearby_banner" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Floating Bottom Nav -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="24dp"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/bg_bottom_nav"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_home_line"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/nav_search"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_search_line"
                app:tint="@color/hint_gray" />

            <ImageView
                android:id="@+id/nav_messages"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_chat_line"
                app:tint="@color/hint_gray" />

            <ImageView
                android:id="@+id/nav_notif"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_bell_line"
                app:tint="@color/hint_gray" />

            <ImageView
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_user_line"
                app:tint="@color/hint_gray" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
